<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.computer.MainActivity"
    android:background="#0f0e0e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:gravity="right|bottom"
            android:textSize="30dp"
            android:editable="false"
            android:id="@+id/edit"
            android:background="#f5f0f0" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:gravity="right|bottom"
            android:textSize="30dp"
            android:editable="false"
            android:id="@+id/edit1"
            android:background="#f5f0f0" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AC"
            android:textSize="25dp"
            android:id="@+id/button_clear"
            android:layout_weight="1"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="DEL"
            android:textSize="25dp"
            android:id="@+id/button_del"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="BIN"
            android:textSize="25dp"
            android:id="@+id/button_Bin"
            android:background="@drawable/color_select" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="OCT"
            android:textSize="25dp"
            android:id="@+id/button_Otc"
            android:background="@drawable/color_select"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="HEX"
            android:textSize="25dp"
            android:id="@+id/button_Hex"
            android:background="@drawable/color_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25dp"
            android:id="@+id/button_7"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="8"
            android:textSize="25dp"
            android:id="@+id/button_8"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="9"
            android:textSize="25dp"
            android:id="@+id/button_9"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="-"
            android:textSize="25dp"
            android:id="@+id/button_dec"
            android:background="@drawable/color_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25dp"
            android:id="@+id/button_4"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="5"
            android:textSize="25dp"
            android:id="@+id/button_5"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="6"
            android:textSize="25dp"
            android:id="@+id/button_6"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="*"
            android:textSize="25dp"
            android:id="@+id/button_mul"
            android:background="@drawable/color_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25dp"
            android:id="@+id/button_1"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="2"
            android:textSize="25dp"
            android:id="@+id/button_2"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="3"
            android:textSize="25dp"
            android:id="@+id/button_3"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="/"
            android:textSize="25dp"
            android:id="@+id/button_div"
            android:background="@drawable/color_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25dp"
            android:id="@+id/button_0"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="25dp"
            android:id="@+id/button_point"
            android:background="@drawable/color_select" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="25dp"
            android:id="@+id/button_equal"
            android:background="@drawable/color_select"
            android:textColor="#db720f" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="+"
            android:textSize="25dp"
            android:id="@+id/button_add"
            android:background="@drawable/color_select" />
    </LinearLayout>


</LinearLayout>
